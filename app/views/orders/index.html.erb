<<!-- app/views/orders/index.html.erb -->

<h1>注文履歴</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>配送先住所</th>
      <th>支払方法</th>
      <th>その他のコメント</th>
      <th>DM希望</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.telephone %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.payment_method_id %></td>
        <td><%= order.other_comment %></td>
        <td><%= order.direct_mail_enabled ? '希望する' : '希望しない' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- トップへ戻るボタン -->
<div class="mt-4">
  <%= link_to 'トップへ戻る', root_path, class: 'btn btn-success' %>
</div>